{% extends 'base.html.twig' %}

{% block stylesheets %}{{ encore_entry_link_tags('app') }}{% endblock %}
{% block javascripts %}
<script>
    var list = {{list|json_encode|raw}}
</script>
{{ encore_entry_script_tags('app') }}
{% endblock %}

{% block body %}
<main>
    <h1>Landing Page</h1>
    {% apply spaceless %}
    <div id="react-app">
        <ul>
        {% for item in list %}
        <li>{{item.description}}</li>
        {% endfor %}
        </ul>
    </div>
    {% endapply %}
</main>
{% endblock %}
